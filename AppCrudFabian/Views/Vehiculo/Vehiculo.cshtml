
@{
    ViewData["Title"] = "Vehiculo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model Vehiculo

<div class="card">
    <div class="card-header">
        <h3> @ViewBag.Action </h3>
    </div>
    <div class="card-body">
        <form asp-controller="Vehiculo" asp-action="Guardar" method="post">
            <input asp-for="id" type="hidden" />
            <div class="mb-3">
                <label> Matricula:</label>
                <input class="form-control" asp-for="matricula" required type="text" />
            </div>
            <div class="mb-3">
                <label> Marca:</label>
                <input class="form-control" asp-for="marca" required type="text" />
            </div>
            <div class="mb-3">
                <label> Modelo:</label>
                <input class="form-control" asp-for="modelo" type="text" />
            </div>
            <div class="mb-3">
                <label> Color:</label>
                <input class="form-control" asp-for="color" type="text" />
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit"> Guardar </button>
                <a asp-controller="Vehiculo" asp-action="Lista" class="btn btn-warning"> Volver</a>
            </div>
        </form>    
    </div>
</div>

