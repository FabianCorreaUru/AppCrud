@{
}

@model List<AppCrudFabian.Models.Empleado>

<div class="card">
    <div class="card-header">
        <h3> Listado Empleados </h3>
    </div>
    <div class="card-body">
        <a asp-controller="Empleado" asp-action="Nuevo" class="btn btn-success mt-2 mb-2" style="float: right;"> Nuevo</a>
    
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Nombre Completo</th>
                    <th>Correo</th>
                    <th>Area</th>
                    <th>Fecha Contrato</th>
                    <th>Activo</th>
                    <th>Acciones </th>
                </tr>
            </thead>
            <tobdy>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.IdEmpleado</td>
                        <td class="text-primary"> <strong> @item.NombreCompleto </strong> </td>
                        <td>@item.Correo</td>
                        <td>@item.Area.Nombre</td>
                        <td>@item.FechaContrato.ToString("dd/MM/yyyy")</td>
                        <td class="text-center"> <strong> @(item.Activo ? "SI" : "NO") </strong> </td>
                        <td style="width: 260px;">
                            <a asp-controller="Empleado" asp-action="Detalle" asp-route-id="@item.IdEmpleado" class="btn btn-primary mb-3">Detalle</a>
                            <a asp-controller="Empleado" asp-action="Editar" asp-route-id="@item.IdEmpleado" class="btn btn-warning mb-3">Editar</a>
                            <a asp-controller="Empleado" asp-action="Eliminar" asp-route-id="@item.IdEmpleado" onclick="return confirmar()" class="btn btn-danger mb-3">Eliminar</a>
                        </td>
                    </tr>
                }
            </tobdy>
        </table>

    </div>
</div>

@section Scripts{
    <script>
        function confirmar() {
            return confirm("Esta seguro de eliminar el empleado?");
        }
    </script>
}
   