@{
}

@model AppCrudFabian.Models.Certificacion;
<div class="row">
    <div class="col-sm-8 offset-sm-2">

        <h2 class="mb-4"> Nueva Certificación </h2>

        <form asp-controller="Certificacion" asp-action="Nuevo" method="post">
            <div class="mb-3">
                <label> Nombre:</label>
                <input class="form-control" asp-for="Nombre" required type="text" />
            </div>
            <div class="mb-3">
                <label> Descripcion:</label>
                <textarea asp-for="Descripcion" type="text" class="form-control" rows="10"></textarea>
            </div>
            <div class="mb-3">
                <button class="btn btn-primary" type="submit"> Guardar </button>
                <a asp-controller="Certificacion" asp-action="Lista" class="btn btn-warning"> Volver</a>
            </div>
        </form>

    </div>
</div>
