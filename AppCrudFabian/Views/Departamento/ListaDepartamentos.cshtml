@{
}

@model List<AppCrudFabian.Models.Departamento>

<div class="card">
    <div class="card-header">
        <h3> Lista Departamentos </h3>
    </div>
    <div class="card-body">
        <div class="row">
        @foreach (var item in Model)
        {            
            <div class="col-3 text-center">
                <h2 class="text-primary"> @item.Nombre </h2>
                <h6> Superficie: @item.Superficie </h6>
                <h6> Población: @item.Poblacion </h6>
                    <a asp-controller="Departamento" asp-action="ListaCiudades" asp-route-IdDepartamento="@item.Id" class="btn btn-success mb-3">Ver Ciudades</a>
            </div>
        }
        </div>
    </div>
</div>